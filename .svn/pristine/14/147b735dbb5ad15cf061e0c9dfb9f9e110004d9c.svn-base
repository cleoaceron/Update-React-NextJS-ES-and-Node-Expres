.global-search {
	&__container {
		height: 72px;
		background-color: $pale-gray;
		justify-content: center;
    	display: flex;
    	align-items: center;
	}
	&__input {
		input {
			height: 36px;
			border-radius:12px;
			-moz-border-radius: 12px;
			-webkit-border-radius: 12px;
		}
	}
}
.suggested {
	&__container {
		border: 1px solid #D7D7D7;
		position: absolute;
		z-index: 99;
		background-color:$body-bg-color;
		top: 35px;
		padding: 4px 21px;
		width:	100%;
	}
}