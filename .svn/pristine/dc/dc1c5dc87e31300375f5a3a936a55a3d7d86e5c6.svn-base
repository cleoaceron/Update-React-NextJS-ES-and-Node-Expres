.esmodal {
	position: relative;
    top: 10%;
    max-width: 50%;
    display: flex;
    background-color: $body-bg-color;
    // border: 1px solid red;
    margin: 0 auto;
	iframe {
		// max-height: 100%;
		// max-width: 100%;
		width: 100%;
		height:30em;
		border-style: none;
		border-width: 0;
		border-color: transparent;
		border-image: none;
	}
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
	bottom: 0;
	background-color:rgba(82,82,82,0.58);
	
  }
  .ReactModal__Overlay {
    opacity: 0;
    transition: opacity 200ms ease-in-out;
}

.ReactModal__Overlay--after-open{
    opacity: 1;
}

.ReactModal__Overlay--before-close{
    opacity: 0;
}

.ReactModal__Body--open,
.ReactModal__Html--open {
  overflow: hidden;
}