.sidebar {
	&__container {
		border: 1px solid #D7D7D7;
		padding: 12px 20px;
		margin: 8px 0 0 0;

		.advance-search-container {
			display: flex;
			border-bottom: 1px solid #c4c3c3;
			text-align: right;

			h5 {
				padding: 0 0 16px 0;
				font-size:1rem;
				font-weight: 500;
				color: #000000;
				top: 20px;
				left: 20px;
				bottom: 15px;
				text-align: left;
			}
			div:first-child {
				width: 50%;
				padding-top: 6px;
			}
			div:nth-child(2) {
				width: 50%;
				button {
					text-align: center;
					height: 32px;
					width: 91px;
					border-radius: 4px;
					border: #999999 1px solid;
					opacity: 1;
					background-color: #ffffff;
					font-family: "Myriad Pro", Myriad, "Liberation Sans", "Nimbus Sans L", "Helvetica Neue", Helvetica, Arial, sans-serif;
					font-size: 1rem;
				}
			}
		}
		p {
			margin: 8px 0 6px 0;
			font-size: 1rem;
			color: #333333;
			text-align: left;
			height: 25px;

			img {
				position: relative;
				bottom: 2px;
			}
		}
	}
}

.advance-search {
	&__container {
		input{
			border:1px solid #D7D7D7;
			border-radius:4px;
			-moz-border-radius: 4px;
			-webkit-border-radius: 4px;
			height: 32px;
			opacity: 1;
			background-color: #ffffff;
			margin-bottom: 6px;
		}
	}
}

.filter {
	&__container {
		margin: 8px 0 0 0;
		border-bottom: 1px solid #c4c3c3;
		ul {
			// max-height: 100%;
		}
		&:last-child{
			border-bottom: 0;
		}
	}
}