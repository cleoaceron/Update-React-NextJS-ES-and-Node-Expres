.notification {
    position: fixed;
    top: 87px;
    left: 0;
    width: 100%;
    background-color: #ccc;
    color: #fff;
    z-index: 1;
    padding: 5px;
    text-align: center;
    opacity: 0;
    transition: all 0.3s ease-in-out;

    &.active {
        opacity: 1;
    }

    &--success {
        background-color: #2ecc71;
    }

    &__message {
        margin: 0;
    }
}
