//result video tab style
.video-result {
	&__container {
		// border: 1px solid red;
		margin-left: 12px;
		margin-bottom: 20px;
	}
	&__header {
		margin-bottom: .75rem;
		line-height: .75rem;
		
		p {
			color: $link-color;
			font-weight: 400;
			margin-bottom: .5rem;
		}
		span {
			color: $link-color;;
		}
	}
	&__body {
		display: flex;
		color:$body-color;
		&--img {
			margin-right: 12px;
			.video-overlay {
   				height: 86px;
   				width: 152px;
				position: absolute;
				&:hover {
					cursor: pointer;
				}
			}
			iframe{
				max-height: 86px;
				max-width: 152px;
				border-style: none;
				border-width: 0;
				border-color: transparent;
				border-image: none;
			}
		}
		&--description {
			p{
				// font-size: 14px;
				margin-bottom: 0px;
			}
		}
	}

}

