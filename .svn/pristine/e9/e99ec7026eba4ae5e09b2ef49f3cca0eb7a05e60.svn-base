.header {
    border-bottom: $border;
    position: fixed;
    width: 100%;
    background-color: #fff;
    z-index: 5;

    &__container {
        @extend .container;
        padding: ($spacing * 2) 0;
    }

    &__overlay {
        position: fixed;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        height: 100vh;
        z-index: 1;
        top: 85px;
        display: none;

        @include media-breakpoint-up(sm) {
            display: none !important;
        }
    }

    &__menu {
        width: 20%;
        vertical-align: middle;
        cursor: pointer;
        display: inline-block;

        @include media-breakpoint-up(sm) {
            display: none;
        }

        span {
            display: block;
            width: 25px;
            border: 1px solid #000;
            margin: 0 auto;
            margin-bottom: 5px;
            transition: 0.3s ease-in-out;
        }

        &.active {
            & ~ .header__lists,
            & ~ .header__overlay {
                display: block;
            }

            span {
                position: relative;

                &:nth-child(1) {
                    transform: rotate(50deg);
                    top: 9px;
                }

                &:nth-child(2) {
                    opacity: 0;
                }

                &:nth-child(3) {
                    transform: rotate(-50deg);
                    top: -5px;
                }
            }
        }
    }

    &__logo {
        display: inline-block;
        vertical-align: middle;
        text-align: center;
        width: 80%;

        @include media-breakpoint-up(sm) {
            width: auto;
        }
    }

    &__lists {
        padding: 0;
        margin: 0;
        list-style: none;
        display: inline-block;
        width: 100%;
        position: absolute;
        top: 85px;
        left: 0;
        z-index: 5;
        background-color: #efefef;
        display: none;
        font-size: 14px;

        @include media-breakpoint-up(sm) {
            background-color: #fff;
            position: relative;
            top: 0;
            left: 0;
            width: auto;
            float: right;
            display: inline;
        }

        li {
            display: block;
            border-bottom: 1px solid #ddd;
            padding: $spacing ($spacing * 2);

            &:last-child {
                border-bottom: none;
            }

            @include media-breakpoint-up(sm) {
                display: inline-block;
                padding: 0 ($spacing);
                border-bottom: none;
            }

            &:last-child {
                border-left: $border;

                img {
                    margin-left: $spacing;
                }
            }

            a {
                color: #000;
            }

            &.logout {
                img {
                    display: none;

                    @include media-breakpoint-up(sm) {
                        display: inline;
                    }
                }
            }
        }
    }
}
